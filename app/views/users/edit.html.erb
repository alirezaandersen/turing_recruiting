<h1><%= @user.first_name %>'s Profile </h1>

<% provide(:title, "Profile") %>

<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_for(@user) do |f| %>
  <%= f.label :first_name, 'First Name' %><br>
  <%= f.text_field :first_name, class: 'form-control' %><br>
  <%= f.label :last_name, 'Last Name' %><br>
  <%= f.text_field :last_name, class: 'form-control' %><br>
  <%= f.label :email %><br>
  <%= f.text_field :email, class: 'form-control' %><br>
  <%= f.label :phone_number %><br>
  <%= f.text_field :phone_number, class: 'form-control' %><br>
  <%= f.label :address %><br>
  <%= f.text_field :address, class: 'form-control' %><br>
  <%= f.label :current_job %><br>
  <%= f.text_field :current_job, class: 'form-control' %><br>
  <%= f.label :previous_job %><br>
  <%= f.text_field :previous_job, class: 'form-control' %><br>

  <%= f.submit "Update Profile" %>

<%end%>
</div>
</div>
